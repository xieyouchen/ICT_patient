<!-- 医生页面的病人列表实现了 -->
<scroll-view scroll-y class="scroll" style="height:60%">
  <view class="first_tab" bindtap="toSearch2_doc">
      <view class="goods_item" wx:for="{{patient}}">
          <image  class="goods_img_wrap" src="{{item.img}}" mode="widthFix" style="max-height: 150px;min-height: 130px;">
          </image>
          <view class="goods_info_wrap" >
              <view class="goods_name">{{item.name}}</view>
              <view class="goods_price">地址： {{item.address}}</view>
              <view class="goods_price">开始治疗时间： {{item.startTime}}</view>
          </view>
      </view>
  </view>
</scroll-view>

